{
  "name": "vs-code-new-package-extension",
  "displayName": "VS-Code New Package Extension",
  "description": "Adds a 'New Package...' option to the VS Code Explorer context menu to create a folder with an index.ts file.",
  "version": "0.0.1",
  "publisher": "Mqxx",
  "repository": "https://github.com/TypeScriptPlayground/vs-code-new-package-extension",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "build": "tsc -p .",
    "package": "npm run build && vsce package"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.newPackage",
        "title": "New Package...",
        "category": "Explorer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.newPackage",
          "when": "explorerResourceIsFolder || explorerViewletVisible",
          "group": "navigation@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.newPackage",
        "key": "shift+p",
        "when": "explorerViewletVisible"
      }
    ]
  },
  "type": "module",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.5.4",
    "@vscode/vsce": "^2.15.0"
  }
}
